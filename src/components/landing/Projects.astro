---
import { projects } from "../../config/projects.json";
---

<h2 class="font-bold text-5xl my-8 text-center">Projects</h2>
{
    projects.map((project) => (
        <div class="flex flex-col md:flex-row md:py-10 text-center  md:text-left">
            <div class="flex-1 p-4">
                <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                <p class="my-4 text-justify">{project.description}</p>
                <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">
                    Mas info
                </button>
            </div>

            <div class="flex-1 my-7">
                <img src={project.image} class="w-72 m-auto rounded-full" />
            </div>
        </div>
    ))
}
